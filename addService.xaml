<Window x:Class="beauty_salon.addService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beauty_salon"
        mc:Ignorable="d"
        Title="Новая услуга" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="textName" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Название"/>
        <TextBox x:Name="fieldName" HorizontalAlignment="Center" Height="23" Margin="0,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <TextBlock x:Name="textPrice" HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Стоимость"/>
        <TextBox x:Name="fieldPrice" HorizontalAlignment="Center" Height="23" Margin="0,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button Content="Добавить" Margin="0,235,0,0" HorizontalAlignment="Center" Width="190" Height="20" Click="addServiceBtn_Click"/>
    </Grid>
</Window>